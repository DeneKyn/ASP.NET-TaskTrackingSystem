@model TaskTrackingSystem.Models.Project;
@{
    ViewData["Title"] = "Edit";
}

<form asp-antiforgery="true" asp-action="Edit" asp-controller="Projects">
    <div class="modal-content">

        <div class="modal-header">
            <h4>Project edit</h4>            
            <button data-dismiss="modal" class="transparent_button"><i class="far fa-times-circle"></i></button>
        </div>


        <div class="modal-body">
            <div class="validation" asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Project name</label>
                <input value="@Model.Name" type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>

                <label asp-for="Description" class="control-label">Project description</label>
                <input value="@Model.Description" type="text" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>

                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <div>
                        <select asp-for="Status" asp-items="Html.GetEnumSelectList<ProjecrStatus>()" class="form-control">
                            
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer justify-content-start">
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </div>

    </div>
</form>
